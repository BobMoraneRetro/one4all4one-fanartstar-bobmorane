<?xml version="1.0" encoding="UTF-8"?>
<theme>
	<formatVersion>7</formatVersion>
	<customView name="coinops" displayName="${viewchoicecoinops}" inherits="gamecarousel">
		<image name="fondecranpreview" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<size>0.55 0.52</size>
			<pos>0.25 0.496</pos>
			<roundCorners>0</roundCorners>
		</image>
		<image name="screenshotcustomgames" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<pos>0.265 0.49</pos>
			<maxSize>0.52 0.55</maxSize>
		</image>
		<image name="screenshotscust" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<pos>0.265 0.49</pos>
			<size>0.52 0.55</size>
		</image>
		<video name="prevvid" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<pos>0.265 0.49</pos>
			<size>0.52 0.55</size>
		</video>
		<image name="screenshader" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<visible>false</visible>
		</image>
		<screenshader name="blur" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<visible>false</visible>
		</screenshader>
		<image name="bannerdefault" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<path ifSubset="custombuilds:standardbuilds">firstfile({game:fanart},"${themePath}/_systemmedia/_fanartsysteme/fresh/${system.theme}.jpg",{game:image})</path>
			<path ifSubset="custombuilds:retrofreshbat">firstfile({game:image},"${themePath}/_systemmedia/_fanartsysteme/fresh/${system.theme}.jpg")</path>
			<autoFade>false</autoFade>
			<linearSmooth>true</linearSmooth>
			<origin>0.5 0.5</origin>
			<pos>0.273 0.12</pos>
			<size>0.3 0</size>
			<path>${themePath}/_common/affiche.png</path>
			<zIndex>3</zIndex>
			<scaleOrigin>-0.1 0</scaleOrigin>
			<color>b7b7b7</color>
			<colorEnd>FFFFFFDD</colorEnd>
			<gradientType>vertical</gradientType>
			<storyboard event="open">
				<animation property="opacity" to="1" duration="1" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" to="1" begin="1" duration="" mode="linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" to="1" begin="1" duration="" mode="linear"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" begin="1" duration="0" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" begin="1" duration="0" mode="linear"/>
			</storyboard>
		</image>
		<image name="bannerauto" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<linearSmooth>true</linearSmooth>
			<autoFade>false</autoFade>
			<origin>0.5 0.5</origin>
			<pos>0.273 0.12</pos>
			<size>0.3 0</size>
			<path>firstfile({game:fanart},{game:image},"${themePath}/_systemmedia/_fanartsysteme/fresh/${system.theme}.jpg")</path>
			<zIndex>3</zIndex>
			<scaleOrigin>-0.1 0</scaleOrigin>
			<color>b7b7b7</color>
			<colorEnd>FFFFFFDD</colorEnd>
			<gradientType>vertical</gradientType>
			<storyboard event="open">
				<animation property="opacity" to="1" duration="1" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" to="1" begin="" duration="" mode="easeIn"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" to="1" begin="" duration="" mode="easeIn"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" begin="100" duration="" mode="easeIn"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" begin="100" duration="" mode="easeIn"/>
			</storyboard>
		</image>
		<image name="gwbanner" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<autoFade>false</autoFade>
			<origin>0.5 0.5</origin>
			<pos>0.273 0.124</pos>
			<maxSize>0.18 0.14</maxSize>
			<path>firstfile({game:wheel},{game:marquee})</path>
			<zIndex>3</zIndex>
			<scaleOrigin>-0.1 0</scaleOrigin>
			<storyboard event="open">
				<animation property="opacity" to="1" duration="1" mode="easeIn"/>
			</storyboard>
			<storyboard event="activateNext">
				<animation property="opacity" to="1" begin="1" duration="" mode="linear"/>
			</storyboard>
			<storyboard event="activatePrev">
				<animation property="opacity" to="1" begin="1" duration="" mode="linear"/>
			</storyboard>
			<storyboard event="deactivateNext">
				<animation property="opacity" to="0" begin="1" duration="0" mode="linear"/>
			</storyboard>
			<storyboard event="deactivatePrev">
				<animation property="opacity" to="0" begin="1" duration="0" mode="linear"/>
			</storyboard>
		</image>
		<image name="LogoSytemgamelist" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<linearSmooth>true</linearSmooth>
			<path>firstfile("${bobmediapath}/_systemmedia/_logosyst/clearlogos/"  + ({game:system:theme}) + "-" + {game:region} + ".png",
			"${bobmediapath}/_systemmedia/_logosyst/clearlogos/"  + ({game:system:theme}) + ".png")</path>
			<autoFade>false</autoFade>
			<origin>0.5 0.5</origin>
			<pos>0.05 0.09</pos>
			<maxSize>0.1 0.07</maxSize>
			<linearSmooth>true</linearSmooth>
			<opacity>0.5</opacity>
			<zIndex>305</zIndex>
			<rotation>-45</rotation>
		</image>
		<image name="dropshadow_logosytemgame" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<path>${extmanufacturer}</path>
			<path if="${system.manufacturer} == 'Collections'">${extgamesyst}</path>
			<pos ifHelpPrompts="false">0.493 0.958</pos>
			<pos ifHelpPrompts="true">0.494 0.923</pos>
			<origin>0.5 0.5</origin>
			<maxSize>0.08 0.07</maxSize>
			<color>00000080</color>
			<zIndex>305</zIndex>
			<opacity>1</opacity>
		</image>
		<image name="preset_logosytemgame" ifSubset="systback:cpscollection|cpsperso" extra="true">
			<visible>true</visible>
			<autoFade>false</autoFade>
			<origin>0.5 0.5</origin>
			<pos ifHelpPrompts="false">0.495 0.955</pos>
			<pos ifHelpPrompts="true">0.495 0.92</pos>
			<path>${extmanufacturer}</path>
			<path if="${system.manufacturer} == 'Collections'">${extgamesyst}</path>
			<maxSize>0.08 0.07</maxSize>
			<linearSmooth>true</linearSmooth>
			<horizontalAlignment>right</horizontalAlignment>
			<verticalAlignment>bottom</verticalAlignment>
			<opacity>1</opacity>
			<zIndex>305</zIndex>
		</image>
	</customView>
</theme>
