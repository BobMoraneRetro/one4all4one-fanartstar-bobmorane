					<animation property="scale" to="1.2" duration="150" mode="easeOut"/>
				</storyboard>
				<storyboard event="deactivate">
					<animation property="scale" to="1" duration="250" mode="easeOut"/>
				</storyboard>
				<container>
					<image name="backgroundtile">
						<path ifSubset="custombuilds:standardbuilds">${standardsbuildsfanart}</path>
						<path ifSubset="custombuilds:retrofreshbat">${freshbuildfanart}</path>
						<pos>0 0</pos>
						<origin>0 0</origin>
						<minSize>0.95 0.95</minSize>
						<scale>0.95</scale>
						<zIndex>3</zIndex>
						<opacity>0.7</opacity>
						<storyboard event="activate">
							<animation property="color" to="FFFFFFFF" begin="" duration="150" mode="Linear"/>
							<animation property="opacity" to="1" begin="" duration="150" mode="Linear"/>
						</storyboard>
						<storyboard event="deactivate">
							<animation property="color" to="858585ff" begin="" duration="250" mode="Linear"/>
							<animation property="opacity" to="0.7" begin="" duration="150" mode="Linear"/>
						</storyboard>
						<storyboard event="scroll">
							<animation property="color" to="858585ff" begin="" duration="250" mode="Linear"/>
						</storyboard>
					</image>
					<image name="nofanart">
						<visible ifSubset="custombuilds:standardbuilds">!exists({game:fanart})</visible>
						<visible ifSubset="custombuilds:retrofreshbat">!exists({game:image})</visible>
						<path>${intfanartfresh}</path>
						<saturation>0</saturation>
						<pos>0 0</pos>
						<origin>0 0</origin>
						<minSize>0.95 0.95</minSize>
						<scale>0.95</scale>
						<zIndex>3</zIndex>
						<storyboard event="activate">
							<animation property="color" to="FFFFFFFF" begin="" duration="150" mode="Linear"/>
						</storyboard>
						<storyboard event="deactivate">
							<animation property="color" to="858585ff" begin="" duration="250" mode="Linear"/>
						</storyboard>
						<storyboard event="scroll">
							<animation property="color" to="858585ff" begin="" duration="250" mode="Linear"/>
						</storyboard>
					</image>
					<image name="cadre">
						<path ifSubset="squarecadre:ombre">${themePath}/_viewgame/fanartstar/cadresquareombre.png</path>
						<path ifSubset="squarecadre:blancombre">${themePath}/_viewgame/fanartstar/cadresquareblanc.png</path>
						<path ifSubset="squarecadre:noirombre">${themePath}/_viewgame/fanartstar/cadresquarenoir.png</path>
						<pos ifSubset="squarecadre:ombre">-0.036 -0.02</pos>
						<pos ifSubset="squarecadre:blancombre">-0.05 -0.055</pos>
						<pos ifSubset="squarecadre:noirombre">-0.05 -0.041</pos>
						<origin>0 0</origin>
						<size ifSubset="squarecadre:ombre">0.95 0.95</size>
						<size ifSubset="squarecadre:blancombre">1 1</size>
						<size ifSubset="squarecadre:noirombre">0.98 0.985</size>
						<zIndex ifSubset="squarecadre:ombre">1</zIndex>
						<zIndex ifSubset="squarecadre:noirombre|blancombre">999</zIndex>
