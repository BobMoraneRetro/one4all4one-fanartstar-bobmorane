			<pos>0.02 0.75</pos>
			<pos ifHelpPrompts="true">0.02 0.735</pos>
			<size>0.97 0.35</size>
			<scrollDirection>vertical</scrollDirection>
			<autoLayout>9 1</autoLayout>
			<padding>0.03 0.05 0.03 0.12</padding>
			<margin>0.001 0.06</margin>
			<imageSource ifSubset="custombuilds:standardbuilds">fanart</imageSource>
			<imageSource ifSubset="custombuilds:retrofreshbat">image</imageSource>
			<scrollbarColor>808080FF</scrollbarColor>
			<scrollbarCorner>0</scrollbarCorner>
			<scrollbarSize>0.003</scrollbarSize>
			<autoLayoutSelectedZoom>1.2</autoLayoutSelectedZoom>
			<margin>-0.001 0.1</margin>
			<animateSelection>false</animateSelection>
			<zIndex>50</zIndex>
			<itemTemplate ifSubset="squarecadre:noirombre|blancombre|ombre">
